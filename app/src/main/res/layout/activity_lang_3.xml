            android:layout_marginBottom="8dp"
            android:elevation="10dp"
            android:gravity="center"
            android:hint="text"
            android:text="k"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textcolorlessons"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_vowel5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_vowel3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_vowel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="10dp"
            android:gravity="center"
            android:hint="text"
            android:text="i"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textcolorlessons"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_vowel6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_vowel4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_vowel6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:elevation="10dp"
            android:gravity="center"
            android:hint="text"
            android:text="n"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textcolorlessons"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_vowel5"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
